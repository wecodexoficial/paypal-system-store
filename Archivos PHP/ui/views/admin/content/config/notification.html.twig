{% extends "admin/structure/base.html.twig" %}

{% block contenido %}

    <!--CONTENT CONTAINER-->
    <div id="content-container">
        <div id="page-head">

            <!--Page Title-->

            <div id="page-title">
                <h1 class="page-header text-overflow">Notificaciones</h1>
                <!--Searchbox-->

            </div>
            <!--End page title-->


            <!--Breadcrumb-->
            <ol class="breadcrumb">
                <li><a href="#">Panel pincipal</a></li>
                <li><a href="#">Configuracion</a></li>
                <li class="active">Notificaciones</li>

            </ol>
            <!--End breadcrumb-->

        </div>


        <!--Page content-->
        <div id="page-content">

            <!-- Basic Data Tables -->
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Tabla de notificaciones</h3>
                </div>
                <div class="panel-body">
                    <table id="" class="table table-striped table-bordered dt-datatable" cellspacing="0" width="100%">
                        <thead>
                        <tr class="bg-dark ">
                            <th><span class="text-light">Titulo</span></th>
                            <th><span class="text-light">Contenido</span></th>
                            <th><span class="text-light">Tipo de notificacion </span></th>
                            <th><span class="text-light">Fecha </span></th>
                            <th><span class="text-light">Estado </span></th>
                            <th><span class="text-light">Ver </span></th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for data in session_user_notification %}
                            <tr>
                                <td>{{ data.title }}</td>
                                <td>{{ data.content }}</td>
                                <td align="center">
                                    {% if (data.type == "notification") %}
                                        <label class="label label-primary "><i style="color: white;" class="fa fa-bell"></i> Informativo </label>
                                    {% elseif (data.type == "success") %}
                                        <label class="label label-success"><i style="color: white;" class="fa fa-check"></i> Correcto</label>
                                    {% elseif (data.type == "alert") %}
                                        <label class="label label-danger "><i style="color: white;"  class="fa fa-exclamation"></i> Importante</label>
                                    {% elseif (data.type == "danger") %}
                                        <label class="label label-warning"><i style="color: white;"  class="fa fa-exclamation-triangle"></i> Alerta</label>
                                    {% endif %}
                                </td>
                                <td>{{ data.date_re }}</td>
                                <td> {% if (data.status == 1) %} Leido {% else %} No leido {% endif %}  </td>
                                <td>
                                   <a href="{{ data.redir }}" class="btn btn-default"><i class="fa fa-eye"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- End Striped Table -->
        </div>

    </div>
    <!--END ASIDE-->







{% endblock %}