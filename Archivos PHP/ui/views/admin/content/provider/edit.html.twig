{% extends "admin/structure/base.html.twig" %}

{% block contenido %}

    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title">
                <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">{{ translate.providers|capitalize }}</span> - {{ translate.edit|capitalize }}  {{ translate.provider }}</h4>
            </div>

            <div class="heading-elements">
                <div class="heading-btn-group">
                    <a href="{{ base }}admin/provider" class="btn btn-success btn-labeled btn-xs"><b><i class="icon-list"></i></b> {{ translate.list|capitalize }} {{ translate.of }} {{ translate.providers }}</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /page header -->


    <!-- Content area -->
    <div class="content">

        <!-- Basic datatable -->
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title">{{ translate.edit_register }}</h5>
                <div class="heading-elements">
                    <ul class="icons-list">
                        <li><a data-action="collapse"></a></li>
                        <li><a data-action="reload"></a></li>
                        <li><a data-action="close"></a></li>
                    </ul>
                </div>
            </div>

            <div class="panel-body">
                        <br>

                        <form class="formNormal" id="{{ base }}admin/provider/update" action="#" method="post">

                        <div class="row">
                            <div class="col-md-12 col-xs-12">
                                <label for="inputSerie">Nombre</label>
                                <div class="input-group form-group">
                                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                    <div class="fg-line">
                                        <input type="text" class="form-control" value="{{ data.name }}" name="name" placeholder="Nombre del proveedor" >
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 col-xs-12">
                                <label for="inputSerie">Correo electronico</label>
                                <div class="input-group form-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    <div class="fg-line">
                                        <input type="text" class="form-control" value="{{ data.email }}" name="email" placeholder="client@mail.com" >
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-xs-12">
                                <label for="inputSerie">Telefono</label>
                                <div class="input-group form-group">
                                    <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                    <div class="fg-line">
                                        <input type="text" name="phone" value="{{ data.phone }}" class="form-control" placeholder="0123456789">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-xs-12">
                                <label for="inputSerie">Pais</label>
                                <div class="input-group form-group">
                                    <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                                    <div class="fg-line">
                                        <input type="text" name="country" value="{{ data.country }}" class="form-control" placeholder="Mexico">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-xs-12">
                                <label for="inputSerie">Direccion</label>
                                <div class="input-group form-group">
                                    <span class="input-group-addon"><i class="fa fa-home"></i></span>
                                    <div class="fg-line">
                                        <input type="text" class="form-control" name="address" value="{{ data.address }}" placeholder="Direccion">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12">
                                <label for="inputSerie">Locacion</label>
                                <div class="input-group form-group">
                                    <span class="input-group-addon"><i class="fa fa-address-book"></i></span>
                                    <div class="fg-line">
                                        <input type="text" name="location" class="form-control" value="{{ data.location }}" placeholder="Localizacion">
                                    </div>

                                </div>
                            </div>
                        </div>

                        <input type="hidden" name="id_provider" value="{{ data.id_provider }}">

                        <div class="text-right">
                            <button type="reset" class="btn btn-default" id="reset">Limpiar <i class="icon-reload-alt position-right"></i></button>
                            <button type="submit" class="btn btn-primary">Guardar <i class="icon-arrow-right14 position-right"></i></button>
                        </div>
                        </form>

                    </div>
                </div>
    </div>
    <!--END ASIDE-->





{% endblock %}